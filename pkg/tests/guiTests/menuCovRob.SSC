			DD.plot = F, ellipses.plot = F)

		menuCovRob(data = stack.dat, rob.rad.p = method, corr = corl,
			short.p = F, long.p = T, eigen.plot = F, distance.plot = F,
			DD.plot = F, ellipses.plot = F)

		menuCovRob(data = stack.dat, rob.rad.p = method, corr = corl,
			short.p = T, long.p = T, eigen.plot = F, distance.plot = F,
			DD.plot = F, ellipses.plot = F)

		menuCovRob(data = stack.dat, rob.rad.p = method, corr = corl,
			short.p = F, long.p = F, eigen.plot = T, distance.plot = F,
			DD.plot = F, ellipses.plot = F)

		menuCovRob(data = stack.dat, rob.rad.p = method, corr = corl,
			short.p = F, long.p = F, eigen.plot = F, distance.plot = T,
			DD.plot = F, ellipses.plot = F)

		menuCovRob(data = stack.dat, rob.rad.p = method, corr = corl,
			short.p = F, long.p = F, eigen.plot = F, distance.plot = F,
